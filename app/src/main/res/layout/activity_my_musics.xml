<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_musics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.qadheeb.fatimah.musicapp.MyMusics">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D7D8D8"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/Edit_text_search_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Search Bar"
                android:inputType="textPersonName" />
            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/searchicon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/info_text_my_music"
                    style="@style/MusicTitleStyle"
                    android:text="@string/info_activity_my_music" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="openMusic"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_view_song_one"
                    style="@style/MusicIcon"
                    app:srcCompat="@drawable/music_file" />
                <TextView
                    android:id="@+id/song_name_one"
                    style="@style/MusicTitleStyle"
                    android:text="@string/song_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="openMusic"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_view_song_two"
                    style="@style/MusicIcon"
                    app:srcCompat="@drawable/music_file" />
                <TextView
                    android:id="@+id/song_name_two"
                    style="@style/MusicTitleStyle"
                    android:text="@string/song_name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="openMusic"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_view_song_three"
                    style="@style/MusicIcon"
                    app:srcCompat="@drawable/music_file" />
                <TextView
                    android:id="@+id/song_name_three"
                    style="@style/MusicTitleStyle"
                    android:text="@string/song_name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="openMusic"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_view_song_four"
                    style="@style/MusicIcon"
                    app:srcCompat="@drawable/music_file" />
                <TextView
                    android:id="@+id/song_name_four"
                    style="@style/MusicTitleStyle"
                    android:text="@string/song_name" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/my_music_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="back" />
        </LinearLayout>
    </LinearLayout>
</ScrollView><!--<a href="https://icons8.com/icon/131/Search">Search icon credits</a>-->